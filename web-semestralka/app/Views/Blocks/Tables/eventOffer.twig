{# app/Views/Blocks/Tables/eventOffer.twig #}
    <div class="container py-4">
        <h2 class="mb-4">Nabídky akcí k přijetí</h2>

        <div class="card shadow-sm">
            <div class="card-body">
                {% if offerEvents is empty %}
                    <div class="alert alert-info mb-0">
                        Aktuálně zde nejsou žádné akce k přijetí.
                    </div>
                {% else %}
                    <div class="table-responsive table-scroll-y">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                            <tr>
                                <th scope="col">Název akce</th>
                                <th scope="col">Tvůrce</th>
                                <th scope="col">Datum a čas</th>
                                <th scope="col">Kapacita</th>
                                <th scope="col">Kategorie</th>
                                <th scope="col">Informace</th>
                                <th scope="col" class="text-end">Akce</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for event in offerEvents %}
                                <tr>
                                    <td>{{ event.name }}</td>
                                    <td>{{ event.creator_name }}</td>
                                    <td>{{ event.date|date('d.m.Y H:i') }}</td>
                                    <td>
                                        {% if event.capacity is not null %}
                                            {{ event.capacity }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ event.category_name }}
                                    </td>
                                    <td class="small text-muted">
                                        {% if event.description is defined and event.description %}
                                            {{ event.description|striptags|length > 80
                                            ? event.description|striptags|slice(0, 80) ~ '…'
                                            : event.description|striptags
                                            }}
                                        {% else %}
                                            –
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <form method="post" class="mb-0">
                                            <input type="hidden" name="event_id" value="{{ event.id }}">
                                            <button type="submit" name="acceptEvent" class="btn btn-sm btn-success"> Přijmout </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
